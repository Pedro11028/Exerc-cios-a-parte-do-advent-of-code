                voltarMenu.setVisible(true);

                int butoes = 0;
                for (int i = 0; i < 3; i++) {
                    for (int j = 0; j < 3; j++) {
                        bt[butoes] = new JButton();
                        bt[butoes].setFont(new Font("Arial", Font.PLAIN, 50));
                        add(bt[butoes]);
                        bt[butoes].setBounds((100 * i) + 50, (100 * j) + 50, 95, 95);
                        validarXeY[butoes] = 0;
                        butoes++;
                    }
                }
                bt[0].addActionListener(new ActionListener() {
                    public void actionPerformed(ActionEvent e) {
                        int numeroButao = 0;
                        int butoesRestantes = 9;
                        if (validarXeY[0] == 0) {
                            for (int i = 0; i < 9; i++) {
                                if (bt[i].getText() == "X" || bt[i].getText() == "O") {
                                    butoesRestantes -= 1;
                                } else {
                                }
                            }
                            if (butoesRestantes <= 1) {
                                escreverX_Y(numeroButao);
                            } else {
                                escreverX_Y(numeroButao);
                                escreverX_Y(numeroButao);
                            }
                            verificarGanhadores();
                        }
                    }
                });
                bt[1].addActionListener(new ActionListener() {
                    public void actionPerformed(ActionEvent e) {
                        int numeroButao = 1;
                        int butoesRestantes = 9;
                        if (validarXeY[1] == 0) {
                            for (int i = 0; i < 9; i++) {
                                if (bt[i].getText() == "X" || bt[i].getText() == "O") {
                                    butoesRestantes -= 1;
                                } else {
                                }
                            }
                            if (butoesRestantes <= 1) {
                                escreverX_Y(numeroButao);
                            } else {
                                escreverX_Y(numeroButao);
                                escreverX_Y(numeroButao);
                            }
                            verificarGanhadores();
                        }
                    }
                });
                bt[2].addActionListener(new ActionListener() {
                    public void actionPerformed(ActionEvent e) {
                        int numeroButao = 2;
                        int butoesRestantes = 9;
                        if (validarXeY[2] == 0) {
                            for (int i = 0; i < 9; i++) {
                                if (bt[i].getText() == "X" || bt[i].getText() == "O") {
