                            }
                            verificarGanhadores();
                        }
                    }
                });
                bt[3].addActionListener(new ActionListener() {
                    public void actionPerformed(ActionEvent e) {
                        int numeroButao = 3;
                        int butoesRestantes = 9;
                        if (validarXeY[3] == 0) {
                            for (int i = 0; i < 9; i++) {
                                if (bt[i].getText() == "X" || bt[i].getText() == "O") {
