                            }
                            verificarGanhadores();
                        }
                    }
                });
                bt[4].addActionListener(new ActionListener() {
                    public void actionPerformed(ActionEvent e) {
                        int numeroButao = 4;
                        int butoesRestantes = 9;
                        if (validarXeY[4] == 0) {
                            for (int i = 0; i < 9; i++) {
                                if (bt[i].getText() == "X" || bt[i].getText() == "O") {
                                    butoesRestantes -= 1;
                                } else {
                                }
                            }
                            if (butoesRestantes <= 1) {
                                escreverX_Y(numeroButao);
                            } else {
                                escreverX_Y(numeroButao);
                                escreverX_Y(numeroButao);
                            }
                            verificarGanhadores();
